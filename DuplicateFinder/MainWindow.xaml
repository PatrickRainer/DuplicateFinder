<Window x:Class="DuplicateFinder.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DuplicateFinder"
        mc:Ignorable="d"
        DataContext="{Binding RelativeSource={RelativeSource Self}}"
        Title="MainWindow" Height="450" Width="800">
    <StackPanel>
        <TextBox x:Name="PathTextBox"></TextBox>
        <Button x:Name="StartButton" Content="start"
                Click="StartButton_OnClick">
        </Button>
        <ProgressBar x:Name="ProgressBar1" Minimum="0" Maximum="100" Value="0" 
                     Height="40"/>
        <ProgressBar x:Name="ProgressBar2" Minimum="0" Maximum="100" Value="0" 
                     Height="40"/>
        <ListView x:Name="FilesListView" ItemsSource="{Binding Files}"></ListView>
    </StackPanel>
</Window>